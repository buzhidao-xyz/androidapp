<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="notitle">
        <item name="android:windowNoTitle">
            true
        </item>
    </style>

    <style name="CustomTitleBackground">
        <item name="android:background">@color/White</item>
    </style>

    <style name="CustomTitleTheme" parent="android:Theme">
        <item name="android:bottom">1dp</item>
        <item name="android:solidColor">#A1A1A1</item>
        <item name="android:windowTitleBackgroundStyle">@style/CustomTitleBackground</item>
        <item name="android:windowTitleSize">48dp</item>
    </style>
</resources>